        <h1>Backoffice</h1>
        <button type="button" class="btn btn-primary"" onclick="showAthletes()" style="color:#fff;">Athletes</button>
        <button type="button" class="btn btn-primary"" onclick="showTeams()" style="color:#fff;">Teams</button>
