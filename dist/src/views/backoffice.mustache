        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteAllAthletesModal">Delete All Athletes</button>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Birth Date</th>
                    <th scope="col">Height(cm)</th>
                    <th scope="col">Weight(Kg)</th>
                    <th scope="col">Nationality</th>
                    <th scope="col">Position</th>
                    <th scope="col">Team</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {{#athletes}}
                <tr class="align-middle">
                    <td>{{athlete_name}}</td>
                    <td>{{athlete_birthDate}}</td>
                    <td>{{athlete_height}}</td>
                    <td>{{athlete_weight}}</td>
                    <td>{{athlete_nationality}}</td>
                    <td>{{athlete_position}}</td>
                    <td>{{athlete_team_name}}</td>
                    <td>
                        <button type="button" class="btn btn-danger" onclick="getAthleteId({{athlete_id}})" data-bs-toggle="modal" data-bs-target="#deleteAthletesModal">Delete</button>
                        <button type="button" onclick="getAthleteId({{athlete_id}})" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#editAthletesModal" style="color:#fff;">Edit</button>
                    </td>
