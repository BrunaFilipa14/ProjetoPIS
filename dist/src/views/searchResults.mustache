<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Backoffice</title>
</head>

<body>
    {{> header}}

    <div class="container">
    <h1>Search Results </h1>
    <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            Filter by
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/search/{{input}}/athletes">Athletes</a></li>
            <li><a class="dropdown-item" href="/search/{{input}}/teams">Teams</a></li>
            <li><a class="dropdown-item" href="/search/{{input}}/competitions">Competitions</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="/search/{{input}}/athletes/name">Athletes Name</a></li>
            <li><a class="dropdown-item" href="/search/{{input}}/teams/name">Teams Name</a></li>
            <li><a class="dropdown-item" href="/search/{{input}}/competitions/name">Competitions Name</a></li>
        </ul>
        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            Order by
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="{{url}}/asc">A-Z</a></li>
            <li><a class="dropdown-item" href="{{url}}/desc">Z-A</a></li>
        </ul>
        <a class="h4" href="/search/{{input}}">Reset</a>
</div>
    <br>
    <!-- Athletes -->
        <div id="athletes">
        <h2>Athletes</h2>
        <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Birth Date</th>
                            <th scope="col">Height(cm)</th>
                            <th scope="col">Weight(Kg)</th>
                            <th scope="col">Nationality</th>
                            <th scope="col">Position</th>
                            <th scope="col">Team</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {{#athletes}}
                        <tr class="align-middle">
                            <td>{{athlete_name}}</td>
                            <td>{{athlete_birthDate}}</td>
                            <td>{{athlete_height}}</td>
                            <td>{{athlete_weight}}</td>
                            <td>{{athlete_nationality}}</td>
                            <td>{{athlete_position}}</td>
                            <td>{{athlete_team_name}}</td>
                            <td>
                                <button type="button" class="btn" id="athlete-{{athlete_id}}" onclick="favouriteActionAthlete({{athlete_id}})" data-athlete-id="{{athlete_id}}" style="color:#fff;">ðŸ©¶</button>
                            </td>
                        </tr>
                    {{/athletes}}
                    </tbody>
                </table>
            </div>
    <!-- Teams -->
    <div id="teams">
            <h2>Teams</h2>
            <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Initials</th>
                            <th scope="col">Badge</th>
                            <th scope="col">Formed Year</th>
                            <th scope="col">Stadium</th>
                            <th scope="col">Country</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {{#teams}}
                        <tr class="align-middle">
                            <td>{{team_name}}</td>
                            <td>{{team_initials}}</td>
                            <td><img src={{team_badge}} style="max-width:100px; max-height:100px;"></td>
                            <td>{{team_formedYear}}</td>
                            <td>{{team_stadium}}</td>
                            <td>{{team_country}}</td>
                            <td>
                                <button type="button" class="btn btn-primary" onclick="getTeamPlayers('{{team_name}}')" data-bs-toggle="modal" data-bs-target="#teamPlayersModal">View Players</button>
                                <button type="button" class="btn" id="team-{{team_id}}" onclick="favouriteActionTeam({{team_id}})" data-team-id="{{team_id}}" style="color:#fff;">ðŸ©¶</button>
                            </td>
                        </tr>
                    {{/teams}}
                    </tbody>
                </table>
        <div>
    <!-- Competitions -->
    <div id="competitions">
            <h2>Competitions</h2>
            <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#competitions}}
                            <tr class="align-middle">
                                <td>{{competition_name}}</td>
                            </tr>
                        {{/competitions}}
                    </tbody>
            </table>
        </div>
    </div>
            
    <script src="/js/teams/teamsFetch.js"> </script>
    <script src="/js/favourites/favouriteTeamsFetch.js"> </script>
    <script src="/js/athletes/athletesFetch.js"> </script>
    <script src="/js/favourites/favouriteAthletesFetch.js"> </script>
</body>
</html>