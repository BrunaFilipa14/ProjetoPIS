<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Competitions</title>
</head>

<body>

    {{> header}}
    <div class="container">
        <h1>Games</h1>
        <br>
        <button type="button" class="btn btn-primary"" onclick="orderByDate()" style="color:#fff;">Order By Date</button>
        <button type="button" class="btn btn-primary"" onclick="orderByCompetition()" style="color:#fff;">Order By Competition</button>
        <table class="table table-striped table-hover">
            <thead>
                <tr><th scorpe="col">Competition</th>
                    <th scorpe="col">Season</th>
                    <th scope="col">Home Team</th>
                    <th scope="col">Score</th>
                    <th scope="col">Away Team</th>
                    <th scorpe="col">Date</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {{#games}}
                <tr class="align-middle">
                    <td>{{competition_name}}</td>
                    <td>{{competition_season}}</td>
                    <td>{{house_team}}</td>
                    <td>{{game_result}}</td>
                    <td>{{visiting_team}}</td>
                    <td>{{game_date}}</td>
                    <!-- TODO: PEGAR O NOME DAS TEAMS, TORNAR AS TEAMS EM BUTTONS-->-
                    <td>
                        <button type="button" class="btn btn-primary" onclick="showAthleteStats({{game_id}})" data-bs-toggle="modal" data-bs-target="#gamePlayersModal">Athlete Stats</button>
                    </td>
                </tr>
            {{/games}}
            </tbody>
        </table>
    </div>


    <!-- Game Players Modal -->
    <div class="modal fade" id="gamePlayersModal" tabindex="-1" aria-labelledby="gamePlayersModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header" style="background-color: #007bff; color: #ffffff;">
                    <h5 class="modal-title" id="gamePlayersModalLabel">Athletes</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Team</th>
                                <th scope="col">Points</th>
                                <th scope="col">Rebounds</th>
                                <th scope="col">Assists</th>
                                <th scope="col">Blocks</th>
                                <th scope="col">Steals</th>
                                <th scope="col">Turnovers</th>
                                <th scope="col">3-Pointers Made</th>
                                <th scope="col">Free Throws Made</th>
                            </tr>
                        </thead>
                        <tbody id="gamesAthletesTable">
                            
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

        <script src="/js/games/games.js"></script>
    </body>
</html>